<Page x:Class="BedBihanGUI.score"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"
	Title="score" Height="80" Width="300">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/textures/parchemin.png"/>
        </Grid.Background>

        <Grid Margin="43,8,43,11">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"></RowDefinition>
                <RowDefinition Height="31*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="name" x:Name="Name" FontSize="22" FontFamily="Arial" FontWeight="Bold" Grid.RowSpan="2"  />
            <Label Content="score : 0" x:Name="Score" FontSize="22"  FontFamily="Arial" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Right" Width="100" />
        </Grid>





    </Grid>
</Page>
